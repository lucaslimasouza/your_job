<div class="container-fluid">

  <div class="row panel panel-primary">
    <div class="col-lg-12 panel-heading">
      <p>
        <h3>
          <strong>Informações básicas - Cadastro</strong>
        </h3>
      </p>
    </div>
    </div>

  <div class="row panel">
    <div class="col-lg-10 box-form">    

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: 'form-vertical', role: 'form'}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in" %>
        </div>
      <% end %>

      <%= render "customers/shared/links" %>

    </div>
  </div>

</div>